checkSame(?U1,?U2) :-
	scores(?U1,?A,?Show,?J,?Score), scores(?U2,?A,?Show,?J,?Score),
	?U1 @< ?U2.
	
sameAvg(?U1,?U2,?Avg1) :-
	contestant(?U1),
	contestant(?U2),
	?Avg1=avg{?Score1|scores(?U1,?A,?S1,?_J,?Score1),scores(?U2,?A,?S2,?_J,?Score2),?U1!=?U2},
	?Avg2=avg{?Score2|scores(?U1,?A,?S1,?_J,?Score1),scores(?U2,?A,?S2,?_J,?Score2),?U1!=?U2},
	?Avg1=?Avg2,
	?U1 @< ?U2.
//	?S1 != ?S2.
//	?U1 @< ?U2.

getAvg(?U1,?Avg1) :-
	contestant(?U1),?Avg1=avg{?Score|scores(?U1,?_A,?_S,?_J,?Score)}.


	
samePc(?U1,?U2,?A,?S1,?S2,?L1,?L2) :-
	contestant(?U1),
